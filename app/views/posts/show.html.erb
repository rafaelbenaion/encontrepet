<div id="botaofinal">
<button type="button" class="btn btn-success btn-block btn-lg" data-toggle="modal" data-target="#myModal">Contatos</button>
<%= link_to 'Voltar', posts_path, :class => "btn btn-default btn-block" %>
     
      <% if user_signed_in? %>
        <div class="footer">
          <span class="admin">
          <% if current_user.profile_name.to_str == @post.user.profile_name.to_str %>
            <h6><%= link_to ' Editar', edit_post_path(@post), :class => "btn btn-xs btn-primary" %>  <%= link_to ' Apagar', @post, method: :delete, data: { confirm: 'Você tem certeza de que quer apagar? Não tem como desfazer depois!' }, :class => "btn btn-xs btn-danger" %></h6>
          <% else %>
          <% end %>
          </span>
        </div> 
      <% else %>
      <% end %>
<div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Contatos para adotar <strong><%=  @post.name %></strong> :</h4>
      </div>
      <div class="modal-body">
      <h5><strong>Dono:</strong> <%= @post.user.name %></h5>
      <h5><strong>Cidade:</strong> <%= @post.cidade %></h5>
      <legend></legend>
