<div class="jumbotron" id="ficarmenor2">

<fieldset>

<h2 id="entrar">Cadastro</h2>
<%= simple_form_for(resource, :defaults => { :input_html => { :class => "form-control input-lg" } }, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
  <%= f.input :first_name, label: false, :placeholder => "Primeiro nome" %>

  <%= f.input :last_name, label: false, :placeholder => "Último nome" %>

  <%= f.input :profile_name, label: false, :placeholder => "Nome de usuário" %>

  <%= f.input :email, label: false, :placeholder => "Email" %>

  <%= f.input :password, autocomplete: "off", label: false, :placeholder => "Senha" %>  


  <% if @validatable %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
<h6 id="termos"><i>Ao clicar em "Criar conta", você concorda com nossos <a href="/pages/termos2">Termos</a> e concorda que leu nossa <a href="/pages/termos">Política de Privacidade</a>.</i></h6>
<div class="boto">
  <button type="submit" class="btn btn-success btn-lg btn-block btn-success">Criar conta</button>
  </fieldset>
<% end %>
<h5 id="entrar2"><strong>Já possui uma conta ? <%= render "devise/shared/links" %></strong></h5>
