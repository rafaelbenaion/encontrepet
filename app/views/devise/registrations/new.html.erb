  <%= f.input :last_name, label: "Segundo nome :" %>

  <%= f.input :profile_name, label: "Nome de usuÃ¡rio :" %>

  <%= f.input :email, autofocus: true, label: "Email :" %>

  <%= f.input :password, autocomplete: "off", label: "Senha :" %>  
  <%= f.input :password_confirmation, autocomplete: "off", label: "Confirmar senha :" %>

  <% if @validatable %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %> </br >
</br >
